{
  "variables": {
   "remote_host": "{{env `remote_host`}}",
    "remote_username": "root",
    "remote_password": "{{env `remote_password`}}",
    "vm_name": "{{env `VM_NAME`}}",
    "datastore": "{{ env `datastore` }}",
    "output_directory": "{{env `VM_NAME`}}",
    "iso_url": "/distributions/iso/Win7IE10.iso",
    "iso_checksum_type": "md5",
    "iso_checksum": "3979e12d3678f90c26d7852564d668f5",
    "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c `Packer Shutdown`",
    "update": false
  },
  "builders": [
    {
      "remote_type": "esx5",
      "remote_host": "{{user `remote_host`}}",
      "remote_username": "root",
      "remote_password": "{{user `remote_password`}}",
      "remote_cache_datastore": "{{ user `datastore`}}",
      "remote_cache_directory": "packer-cache",
      "remote_datastore": "{{ user `datastore`}}",
      "output_directory": "{{user `output_directory`}}",
      "vm_name": "{{user `vm_name`}}",
      "type": "vmware-iso",
      "skip_compaction": true,
      "guest_os_type": "windows7",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "md5",
      "ssh_username": "Administrator",
      "ssh_password": "password",
      "floppy_files": [
        "custom/wget.exe",
        "floppy/00-run-all-scripts.cmd",
        "floppy/install-winrm.cmd",
        "floppy/fixnetwork.ps1",
        "floppy/powerconfig.bat",
        "floppy/01-install-wget.cmd",
        "floppy/_download.cmd",
        "floppy/_packer_config.cmd",
        "floppy/passwordchange.bat",
        "floppy/networkprompt.bat",
        "floppy/openssh.bat",
        "floppy/zz-start-sshd.cmd"
      ],
      "tools_upload_flavor": "windows",
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "{{ user `shutdown_command`}}",
      "disk_size": 15360,
      "vmx_data": {
        "ethernet0.networkName": "VM Network",
        "memsize": "2048",
        "numvcpus": "2",
        "cpuid.coresPerSocket": "2"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "remote_path": "/tmp/script.bat",    
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts": [     

        "custom/boot.cmd",
        "custom/selenium-slave.bat",
        "custom/shutdown.bat"
      ]
    },
    {
      "type": "shell",
      "inline": ["rm -f /tmp/script.bat"]
    }
  ]
}
